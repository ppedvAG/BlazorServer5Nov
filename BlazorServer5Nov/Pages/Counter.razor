@page "/counter"

<h1>Counter</h1>

<p>Current count: @(currentCount+1)</p>

<button class="btn btn-primary" @onclick="IncrementCount">
    Click me
</button>

 onclick="return confirm('wirklich?');"
@code   {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
