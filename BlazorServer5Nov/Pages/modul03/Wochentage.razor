@page "/WT"
<h3>Wochentage</h3>
<div class="row">
    <div class="col">
        <div class="list-group">
            <div class="list-group-item active">
                Wochentage
            </div>
            @for (int i = 0; i < 7; i++)
            {
                int x = i;
                <div class="list-group-item  list-group-item-action" @onclick="()=>Auswahl(x)" @onclick:stopPropagation>
                    @DateTime.Now.AddDays(i).ToString("dddd")
                </div>
            }
           

        </div>
    </div>
</div>
@ausgabe
@code {

    public int xy { get; set; }
    string ausgabe;
    void Auswahl(int i)
    {
        ausgabe = DateTime.Now.AddDays(i).ToString("dddd");

    }
  
}
